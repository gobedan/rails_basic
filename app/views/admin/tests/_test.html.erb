<div class="admin-test-container test-container">
  <p>
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </p>
  <p>
    <%= t('admin.tests.level') %>: <%= test.level %>, 
    <%= t('admin.tests.questions') %>: <%= test.questions.size %>
    <% if test.time %>
      , <%= t('admin.tests.time.label') %>: <%= test.time %><%= t('admin.tests.time.measure') %>
    <% end %>
  </p>
  <%= link_to t('admin.tests.open.link'), admin_test_path(test) %>
  <%= link_to t('admin.tests.update.link'), 
              edit_admin_test_path(test), 
              class: 'form-inline-link',
              data: { test_id: test.id } %>
  <%= link_to t('admin.tests.destroy.link'), 
              admin_test_path(test), 
              method: :delete, 
              data: { confirm: t('admin.tests.destroy.confirm') } %>
</div>
