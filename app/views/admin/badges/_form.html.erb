<%= form_with(model: [:admin, @badge], local: true, class: "new_badge_form") do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :icon_file %>
    <%= form.text_field :icon_file %>
  </div>

  <h4>Правила выдачи</h4>
  <div class="field">
    <%# Путаница с kebab-case и snake-case для классов и айди %>
    <%# суффикс кнопки и лейбла должны строго совпадать с параметрами %>
    <%= form.radio_button :rule, 'level', class: "new_badge_radio" %>
    <%= form.label :rule_level, 'Вручать за прохождение всех тестов уровня' %> 
    <%= form.collection_select :level, Test.pluck(:level).uniq!, :to_int, :to_int, prompt: true %></br>
    <%= form.radio_button :rule, 'category', class: "new_badge_radio" %>     
    <%= form.label :rule_category, 'Вручать за прохождение всех тестов в категории' %> 
    <%= form.collection_select :category, Category.all, :id, :title, prompt: true %> 
    </br>
    <%= form.radio_button :rule, 'test', class: "new_badge_radio" %>
    <%= form.label :rule_test, 'Вручать за прохождение теста с первой попытки' %> 
    <%= form.collection_select :test, Test.all, :id, :title, prompt: true %> 
    </br>
    
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
